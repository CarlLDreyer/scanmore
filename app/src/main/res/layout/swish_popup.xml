<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="365dp"
    android:layout_height="700dp"
    android:background="@drawable/rounded_layout_swish"
    android:id="@+id/swish_popup"
    android:layout_gravity="center">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Betala"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_marginTop="40dp"/>
    <View
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="@drawable/ic_swish_border"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="ICA"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:textSize="30sp"
        android:layout_marginTop="70dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="ICA AB"
        android:textColor="@android:color/darker_gray"

        android:textSize="20sp"
        android:layout_marginTop="5dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="BELOPP"
        android:textColor="@android:color/darker_gray"
        android:textStyle="bold"
        android:textSize="15sp"
        android:layout_marginTop="50dp"/>
    <TextView
        android:id="@+id/swish_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="@android:color/black"
        android:textSize="25sp"
        android:layout_marginTop="5dp"/>



    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="229dp"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_marginTop="105dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="BankID kommer att öppnas på din enhet för att verifiera betalningen"
            android:textAlignment="center"
            android:textColor="@android:color/darker_gray"
            android:textSize="15sp"
      />

        <Button
            android:id="@+id/pay_button"
            android:layout_width="330dp"
            android:layout_height="70dp"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:background="@drawable/rounded_layout_swish_button"
            android:gravity="center"
            android:text="Betala"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:layout_row="1"/>

        <Button
            android:id="@+id/cancel_button"
            android:layout_width="330dp"
            android:layout_gravity="center"
            android:layout_height="70dp"
            android:background="@android:color/transparent"
            android:text="Avbryt"
            android:textAllCaps="false"
            android:textColor="@color/swish_button"
            android:textSize="20sp"
            android:layout_row="2"/>


    </GridLayout>







</LinearLayout>