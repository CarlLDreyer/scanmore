<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="365dp"
    android:layout_height="500dp"
    android:background="@drawable/rounded_layout_swish"
    android:id="@+id/swish_popup_success"
    android:layout_gravity="center">
    <RelativeLayout
        android:id="@+id/swish_complete"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@drawable/swish_complete_bg">
        <Button
            android:id="@+id/dismiss_success_cc"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:background="@android:color/transparent"
            android:layout_alignParentEnd="true"
            android:gravity="center"
            android:drawableLeft="@drawable/ic_dismiss"
            android:paddingStart="18dp" />
        <ImageView
            android:id="@+id/swish_success"
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:layout_marginTop="80dp"
            android:src="@drawable/ic_swish_success_logo"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="Betalning utförd!"
            android:textColor="@android:color/white"
            android:layout_below="@+id/swish_success"
            android:textSize="24sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/order"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Order number: 283812939"
        android:layout_below="@id/swish_complete"
        android:textAlignment="center"
        android:textColor="@android:color/darker_gray"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_centerHorizontal="true"
        android:text="Din betalning är nu genomförd. Tack för att du valt att handla hos oss!"
        android:layout_below="@id/order"
        android:textAlignment="center"
        android:textColor="@android:color/darker_gray"
        android:textSize="18sp"
        />


    <Button
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:background="@color/buttons_color"
        android:text="BACK"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:textColor="@android:color/white"
        android:id="@+id/back_button"
        android:textSize="25sp"
        android:layout_alignParentBottom="true"/>


</RelativeLayout>