<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/profie_activty"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/profile_layout"
        android:layout_width="match_parent"
        android:layout_height="325dp"
        android:background="@drawable/gradient_bg"
        android:orientation="vertical"
        android:paddingTop="60dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="20dp"
            android:scaleType="centerCrop"
            android:src="@drawable/man" />

        <TextView
            android:id="@+id/profile_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Carl L Dreyer"
            android:paddingTop="10dp"
            android:textColor="@android:color/white"
            android:textSize="30sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/profile_layout"
        android:paddingTop="50dp">
        <TextView
            android:id="@+id/email_p"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/buttons_color"
            android:text="Email:"
            android:textSize="17sp"/>
        <TextView
            android:id="@+id/email_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="19sp"
            android:text="Carl.lidsrom.dreyer@gmail.com "/>
        <TextView
            android:id="@+id/street_p"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/buttons_color"
            android:text="Adress:"
            android:layout_marginTop="20dp"
            android:textSize="17sp"/>
        <TextView
            android:id="@+id/street_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="19sp"
            android:text="Stuartsgatan 2"/>
        <TextView
            android:id="@+id/mobile_p"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/buttons_color"
            android:text="Telefonnummer:"
            android:layout_marginTop="20dp"
            android:textSize="17sp"/>
        <TextView
            android:id="@+id/mobile_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="19sp"
            android:text="0707126421"/>
    </LinearLayout>


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:background="@android:color/transparent"
        android:minHeight="?attr/actionBarSize"
        app:theme="@style/TransparentToolbar">
        <ImageButton
            android:id="@+id/settings_button"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:contentDescription="settingsButton"
            android:background="@drawable/ic_settings"
            android:layout_gravity="end"
            android:layout_marginEnd="15dp"/>
    </androidx.appcompat.widget.Toolbar>

</RelativeLayout>