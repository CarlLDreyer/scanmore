<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="365dp"
    android:layout_height="250dp"
    android:background="@drawable/rounded_layout"
    android:padding="5dp"
    android:layout_gravity="center"
    >
    <ImageButton
        android:id="@+id/close_dialog_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_close_dialog"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="5dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Add a new payment method"
        android:layout_gravity="center"
        android:textSize="20dp"
        android:textStyle="bold"/>
    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp">
    <ImageButton
        android:id="@+id/credit_card_option"
        android:layout_width="150dp"
        android:layout_height="95dp"
        android:background="@drawable/rounded_layout_small"
        android:elevation="3dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/creditcardlogo"
        android:scaleType="fitCenter"
        android:padding="12dp"
        android:layout_marginBottom="15dp"/>

        <ImageButton
            android:onClick="openSwishDialog"
            android:id="@+id/swish_option"
            android:layout_width="150dp"
            android:layout_height="95dp"
            android:layout_gravity="right"
            android:elevation="3dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/rounded_layout_small"
            android:src="@drawable/swish1"
            android:scaleType="fitCenter"
            android:padding="20dp"
            android:layout_marginBottom="15dp"/>
    </GridLayout>



</LinearLayout>